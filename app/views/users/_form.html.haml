= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name

  = f.fields_for :phones do |fp|
    .field
      = fp.label :kind
      = fp.text_field :kind
    .field
      = fp.label :number
      = fp.text_field :number
      = fp.hidden_field :_destroy


  .actions
    = f.submit 'Save'
